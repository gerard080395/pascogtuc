<!-- Page Content -->
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row bg-title">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h4 class="page-title">User Profile</h4>
            </div>

            <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                <ol class="breadcrumb">
                    <li>Profile</li>
                    <li class="active">Purchase History</li>
                </ol>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        {{#if orders}}
            <div class="row">
                <div class="col-md-12">
                    <div class="white-box">
                        <h3 class="box-title">History Of Orders</h3>
                        <div class="row">
                            <div class="col-md-8 col-md-offset-2">
                                <h1>User Profile</h1>
                                <hr>
                                <h2>My Orders</h2>
                                {{# each orders }}
                                    <div class="panel panel-default">
                                        <div class="panel-body">
                                            <ul class="list-group">
                                                {{# each this.items }}
                                                    <li class="list-group-item">
                                                        <span class="badge">&#8373; {{ this.productPrice }}</span>
                                                        {{ this.item.productTitle }} | {{ this.qty }} Unit(s)
                                                    </li>
                                                {{/each}}
                                            </ul>
                                        </div>
                                        <div class="panel-footer">
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <strong>Total Price: &#8373; {{ this.cart.totalPrice }}</strong><br>
                                                </div>
                                                <div class="col-lg-12">
                                                    <strong>Date of order: </strong> {{ this.time }}
                                                </div>


                                                <!--<a href="/user/receipt/{{this._id}}" >Generate Receipt</a>-->
                                            </div>

                                        </div>
                                    </div>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- .right-sidebar -->
        {{else}}
            <h1>No orders have been placed yet</h1>
        {{/if}}


